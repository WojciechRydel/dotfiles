set header_cache=~/.cashe/mutt
set message_cachedir = "~/.cache/mutt"
unset imap_passive
set imap_check_subscribed
set imap_keepalive=300
set mail_check=120
set use_from = yes
set implicit_autoview
auto_view text/html application/x-pgp-message
set mailcap_path="~/.mailcap"
set mbox_type=Maildir

# Index View Options ---------------------------------
set date_format = "%m/%d"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads                         # like gmail
set sort_aux = reverse-last-date-received  # like gmail
set uncollapse_jump                        # don't collapse on an unread message
set sort_re                                # thread based on regex
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
bind index G imap-fetch-mail

source ~/.mutt/sidebar.rc

# macro to handle urls in message using urlview
macro index \cb |urlview\n 'call urlview to extract URLs out of a message'


folder-hook wojciech.rydel@skyconcept.pl 'source ~/.mutt/work'
folder-hook rydel.wojciech@gmail.com 'source ~/.mutt/gmail'

macro index,pager <f2> '<sync-mailbox><enter-command>source ~/.mutt/gmail<enter><change-folder>!<enter>'
macro index,pager <f3> '<sync-mailbox><enter-command>source ~/.mutt/work<enter><change-folder>!<enter>'

# default - work
source "~/.mutt/work"

