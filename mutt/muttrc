set imap_user=rydel.wojciech@gmail.com
set imap_pass=`gpg -dq $HOME/.mutt/gmial-pass.gpg`
set folder=imaps://imap.gmail.com
set spoolfile=+INBOX
set imap_check_subscribed

set header_cache=~/.cashe/mutt
set postponed=+[Gmail]/Drafts
unset imap_passive
set imap_keepalive=300
set mail_check=120
set my_pass=$gmail_pass
set my_user=rydel.wojciech

set realname = 'Wojciech Rydel'
set from = rydel.wojciech@gmail.com
set use_from = yes

set smtp_url=smtps://$my_user:$my_pass@smtp.gmail.com
set ssl_force_tls = yes


set implicit_autoview
auto_view text/html application/x-pgp-message
set mailcap_path="~/.mailcap"

source ~/.mutt/sidebar.rc
