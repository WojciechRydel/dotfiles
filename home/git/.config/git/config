[init]
    templateDir = ~/.config/git/templatedir

[user]
    name = Wojciech Rydel
    email = rydel.wojciech@gmail.com
    signingkey = 45D9F6F98EC117B7FA01D3BD9B8BEF4DE4421E47

[core]
    pager = delta
    editor = vim

[alias]
    st = status
    ci = commit -S
    fixup = commit --amend --no-edit
    slog = log --show-signature
    stag = tag -s
    smerge = merge -S
    srebase = rebase -S
    stats=shortlog -sn
    purge=! git branch -D $1 && git push -d origin $1
    mrebase = !git stash -u && git checkout master && git pull && git checkout - && git rebase master

[commit]
    gpgsign = true

[merge]
    tool = vimdiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[diff]
    tool = icdiff
    indentHeuristic = on

[difftool]
    prompt = true

[difftool "icdiff"]
    cmd = /usr/bin/icdiff --line-numbers $LOCAL $REMOTE | less

[diff "image"]
    command = git-img-diff

[rerere]
    enabled = true

[push]
    followTags = true

[help]
    autoCorrect = -1

[interactive]
    diffFilter = delta --color-only --features=interactive

[delta]
    features = decorations

[delta "interactive"]
    keep-plus-minus-markers = false

[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax

